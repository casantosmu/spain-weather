{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": ["*.ts", "*.tsx"]
    },
    {
      "files": ["*.test.ts"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "max-nested-callbacks": "off" }
    },
    {
      "extends": ["prettier"],
      "files": ["*"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error"
  },
  "ignorePatterns": ["dist", "**/generated/**"]
}
