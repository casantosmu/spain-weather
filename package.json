{
  "name": "spain-weather",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "prestart": "npm run build",
    "start": "node .",
    "dev": "dotenv -- nodemon --watch src --exec node --loader ts-node/esm --inspect=0.0.0.0:9229 src/index.ts | pino-pretty",
    "test": "dotenv -e .env.test -- cross-env PORT=0 jest",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:docs": "npx spectral lint src/docs.json",
    "check:types": "tsc --noEmit",
    "generate:Docs": "openapi-typescript src/docs.json --export-type --support-array-length -o src/generated/Docs.ts",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\""
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.ts": "eslint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.4.0",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.2.2",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "swagger-ui-express": "^4.6.3",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@stoplight/spectral-cli": "^6.8.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.61.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.57.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "openapi-typescript": "^6.2.6",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
