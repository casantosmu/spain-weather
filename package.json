{
  "name": "spain-weather",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "dev": "nodemon --watch src --exec node --loader ts-node/esm --inspect=0.0.0.0:9229 src/index.ts | pino-pretty",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "check:lint": "eslint src",
    "check:docs": "npx spectral lint src/docs/docs.json --ruleset src/docs/spectral.json",
    "check:types": "tsc --noEmit",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\""
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.ts": "eslint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "pino": "^8.11.0",
    "pino-http": "^8.3.3",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.6.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
